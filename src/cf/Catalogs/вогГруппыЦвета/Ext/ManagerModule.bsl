	Если Не ЗначениеЗаполнено(Ссылка) Тогда
		Возврат Неопределено;	
	Иначе	
		
		ХранилищеЦвета = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(Ссылка, ?(ПутьКДанным = Неопределено, "Цвет", ПутьКДанным));
		Если ТипЗнч(ХранилищеЦвета) = Тип("ХранилищеЗначения") Тогда
			Возврат ХранилищеЦвета.Получить();
		Иначе	
			Возврат Неопределено;
		КонецЕсли;
		
	КонецЕсли;
	
