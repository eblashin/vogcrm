	МинимальноКоличество = Цел(Количество / 3);
	Остаток              = Количество - МинимальноКоличество * 3;
	
	КоличествоВКолонке1 = Количество;
	КоличествоВКолонке2 = 0;
	КоличествоВКолонке3 = 0;

	ТаблицаМоделей = РезультатЗапроса.Выгрузить();
	Для Сч = 0 по КоличествоВКолонке1 - 1 Цикл
		ДобавитьЭлементТипаОтношений(ТаблицаМоделей[Сч], Элементы.СГруппойКолонка1, Сч, Ключ);	
		
	КонецЦикла;
	
	//Для Сч = КоличествоВКолонке1 По КоличествоВКолонке1 + КоличествоВКолонке2 - 1 Цикл
	//	ДобавитьЭлементТипаОтношений(ТаблицаМоделей[Сч], Элементы.СГруппойКолонка2, Сч, Ключ);	
	//	
	//КонецЦикла;

	//Для Сч = КоличествоВКолонке1 + КоличествоВКолонке2 По КоличествоВКолонке1 + КоличествоВКолонке2 + КоличествоВКолонке3 - 1 Цикл
	//	ДобавитьЭлементТипаОтношений(ТаблицаМоделей[Сч], Элементы.СГруппойКолонка3, Сч, Ключ);	
	//	
	//КонецЦикла;
	
	//Дополнительные команды
	МассивИсточник = вогОбщегоНазначенияПовтИсп.ИсключительныеВидыТорговыхТочек();
	Для Сч = 0 По МассивИсточник.Количество() - 1 Цикл
		ЗначениеИсточник = МассивИсточник[Сч];
		
		СтруктураТипаОтношений = Новый Структура;
