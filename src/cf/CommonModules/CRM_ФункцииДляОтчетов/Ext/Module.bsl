// Функция приводит строку трудозатрат к формату "часы:минуты".
//
Функция ФорматЧасыМинуты(Трудозатраты)  Экспорт
	
	Если Трудозатраты = Null Тогда
		Возврат "";
	КонецЕсли;	
	
	ЧасыТрудозатрат      = Цел(Трудозатраты);
	МинутыТрудозатрат    = Окр((Трудозатраты - ЧасыТрудозатрат)*3/5, 2);
	Возврат Формат(ЧасыТрудозатрат + МинутыТрудозатрат, "ЧДЦ = 2; ЧРД = ':'");
		
КонецФункции					

// Функция ограничивает описание.
//
Функция ОграничитьОписание(Описание,КолСимволов = 200)  Экспорт
	
	Если Описание = Null Тогда
		Возврат "";
	КонецЕсли;	

	
	Если  КолСимволов <= 0 Тогда
		Возврат Описание;
	КонецЕсли;	
	
	Возврат Лев(Описание,КолСимволов) + "...";
	
КонецФункции	

