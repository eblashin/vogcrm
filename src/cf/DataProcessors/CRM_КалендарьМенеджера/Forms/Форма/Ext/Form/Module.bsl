		Значение 			= КлючИЗначение.Значение.Получить("Значение");
		
		Если ВидСравненияПоля = Неопределено Тогда
			ВидСравненияПоля = ВидСравненияКомпоновкиДанных.Равно;
		КонецЕсли;
		
		Если Использование = Неопределено Тогда
