&НаСервере
Процедура ДополнитьДаннымиКомандировок(РезультатТаблица, НачальнаяДата, КонечнаяДата) // VOG Ульянов И.В. 14.01.2020 CRM-158
	
	//МассивПользователей = вогНастраиваемоеДелегированиеПрав.ПолучитьМассивПользователейДелегата("Мероприятия", Ложь);
	
	МассивПользователей = Новый Массив;	
	МассивПользователей.Добавить(ОтборЗначениеПользователь);
	
	УстановитьПривилегированныйРежим(Истина);
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ РАЗЛИЧНЫЕ
		|	вогКомандировкаКомандированныеСотрудники.Ссылка КАК Ссылка,
		|	вогКомандировкаКомандированныеСотрудники.Ссылка.ВремяНачала КАК ВремяНачала,
		|	вогКомандировкаКомандированныеСотрудники.Ссылка.ВремяОкончания КАК ВремяОкончания,
		|	вогКомандировкаКомандированныеСотрудники.Ссылка.Продолжительность КАК Продолжительность,
		|	вогКомандировкаКомандированныеСотрудники.Ссылка.Сотрудник КАК Сотрудник
		|ИЗ
		|	Документ.вогКомандировка.КомандированныеСотрудники КАК вогКомандировкаКомандированныеСотрудники
		|ГДЕ
		|	вогКомандировкаКомандированныеСотрудники.Сотрудник В(&СписокСотрудников)
		|	И вогКомандировкаКомандированныеСотрудники.Ссылка.Проведен = ИСТИНА
		|	И вогКомандировкаКомандированныеСотрудники.Ссылка.Статус = ЗНАЧЕНИЕ(Перечисление.вогСтатусыКомандировок.Утверждено)
		|	И НЕ(вогКомандировкаКомандированныеСотрудники.Ссылка.ВремяНачала < &НачалоПериода
		|					И вогКомандировкаКомандированныеСотрудники.Ссылка.ВремяОкончания < &НачалоПериода
		|				ИЛИ вогКомандировкаКомандированныеСотрудники.Ссылка.ВремяНачала > &ОкончаниеПериода
		|					И вогКомандировкаКомандированныеСотрудники.Ссылка.ВремяОкончания > &ОкончаниеПериода)";
	
	Запрос.УстановитьПараметр("НачалоПериода", НачальнаяДата);
	Запрос.УстановитьПараметр("ОкончаниеПериода", КонечнаяДата);
	Запрос.УстановитьПараметр("СписокСотрудников", МассивПользователей);
	
	РезультатЗапроса = Запрос.Выполнить();
	
	Выборка = РезультатЗапроса.Выбрать();
	
	НачалоДняЧас = Объект.КэшНастроекОтображения.НастройкиОтображения.НачалоДняКалендаряЧас;
	КонецДняЧас = Объект.КэшНастроекОтображения.НастройкиОтображения.КонецДняКалендаряЧас;
	
	Пока Выборка.Следующий() Цикл
		Если Выборка.Продолжительность >= 1 тогда
			Для Счетчик = 1 по Выборка.Продолжительность цикл
				ВремяНачала = НачалоДня(Выборка.ВремяНачала + (Счетчик - 1) * 86400);
				СтрокаТаблицы = РезультатТаблица.Добавить();
				СтрокаТаблицы.Тема = "Командировка";
				СтрокаТаблицы.НачалоДня = Дата(Год(ВремяНачала),Месяц(ВремяНачала),День(ВремяНачала),НачалоДняЧас,1,0);
				СтрокаТаблицы.Дата = ВремяНачала;
				СтрокаТаблицы.ПериодНачало = Дата(Год(ВремяНачала),Месяц(ВремяНачала),День(ВремяНачала),НачалоДняЧас,0,0);
				СтрокаТаблицы.ПериодОкончание = Дата(Год(ВремяНачала),Месяц(ВремяНачала),День(ВремяНачала),КонецДняЧас-1,59,0); 
				СтрокаТаблицы.Отменено = Ложь;
				СтрокаТаблицы.НаВесьДень = Ложь;
				СтрокаТаблицы.Завершено = Ложь;
				СтрокаТаблицы.Важность = 1;
				СтрокаТаблицы.Объект = Выборка.Ссылка;
				СтрокаТаблицы.Пользователь = Выборка.Сотрудник;
			КонецЦикла;
		КонецЕсли;		
	КонецЦикла;	
	
	УстановитьПривилегированныйРежим(Ложь);
	
КонецПроцедуры	
	
