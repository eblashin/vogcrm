		СтруктураПараметров.Вставить("Тема",					Элемент.ВыделенныеЭлементы[0].Текст);
		
		ПараметрыМероприятия = СоздатьНовоеМероприятие(СтруктураПараметров);
		
		СтруктураЗначений = Новый Структура;
		СтруктураЗначений.Вставить("Источник", ПараметрыМероприятия.Ссылка);
		СтруктураЗначений.Вставить("ДокументИнтерес", );
