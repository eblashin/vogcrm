	ИсполнительСтрокой = "";
	
	МассивСтрок				= табИсполнители_.НайтиСтроки(Новый Структура("ТочкаМаршрута",ТочкаМаршрута));
	
	Для Каждого ЭлементМассива Из МассивСтрок Цикл
		СтрокаИсполнителя = СокрЛП(Строка(ЭлементМассива.Исполнитель));
