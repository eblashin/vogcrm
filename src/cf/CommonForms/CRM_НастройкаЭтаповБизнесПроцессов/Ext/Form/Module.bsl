		Запрос.УстановитьПараметр("Ссылка", ТочкаМаршрута);
		Запрос.УстановитьПараметр("НомерВерсии",?(НастройкаЭтаповКартыМаршрута,Процесс.НомерВерсии, Процесс.CRM_КартаМаршрута.НомерВерсии));
		Запрос.Текст = "ВЫБРАТЬ
