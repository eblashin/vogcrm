	ПоказатьЗначение(, СписокПолучателей[ВыбраннаяСтрока].Значение);
	
КонецПроцедуры

&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	
	Если Параметры.Свойство("Заголовок") Тогда
		Заголовок = Параметры.Заголовок;
	КонецЕсли;
	
	Если Параметры.Свойство("МассивПолучателей") Тогда
		Для Каждого СтруктураПолучателя Из Параметры.МассивПолучателей Цикл
			СписокПолучателей.Добавить(СтруктураПолучателя.Контакт,СокрЛП(Строка(СтруктураПолучателя.Контакт)) + " <"+ СокрЛП(СтруктураПолучателя.Адрес) + ">");
		КонецЦикла;
	КонецЕсли;
	
КонецПроцедуры

