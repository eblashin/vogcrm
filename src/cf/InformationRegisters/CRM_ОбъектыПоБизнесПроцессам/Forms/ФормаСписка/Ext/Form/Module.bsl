
&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	Если Параметры.Свойство("Отбор") И ТипЗнч(Параметры.Отбор) = Тип("Структура") Тогда
		Если	Параметры.Отбор.Свойство("Задача")
			И	ТипЗнч(Параметры.Отбор.Задача) = Тип("ЗадачаСсылка.ЗадачаИсполнителя")
			И	Не Параметры.Отбор.Свойство("БизнесПроцесс") Тогда
			//
			Если ЗначениеЗаполнено(Параметры.Отбор.Задача.БизнесПроцесс) Тогда
				БизнесПроцесс = Параметры.Отбор.Задача.БизнесПроцесс;
				Параметры.Отбор.Удалить("Задача");
				Параметры.Отбор.Вставить("БизнесПроцесс", БизнесПроцесс);
			КонецЕсли;
		КонецЕсли;
	КонецЕсли;
КонецПроцедуры

&НаКлиенте
Процедура СписокВыбор(Элемент, ВыбраннаяСтрока, Поле, СтандартнаяОбработка)
	
	СтандартнаяОбработка = Ложь;
	
	Если Поле.Имя = "Задача" Тогда
		ПоказатьЗначение(, Элемент.ТекущиеДанные.Задача);
	Иначе	
		ПоказатьЗначение(, Элемент.ТекущиеДанные.Объект);
	КонецЕсли;
	
КонецПроцедуры
